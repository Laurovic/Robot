# generated by mBlock5 for CyberPi
# codes make you happy

import event, time, cyberpi, mbot2

@event.is_press('a')
def is_btn_press():
    cyberpi.audio.record()
    time.sleep(2)
    cyberpi.audio.stop_record()
    cyberpi.audio.set_vol(9999)
    cyberpi.audio.play_record_until()

@event.is_press('b')
def is_btn_press1():
    for count in range(10):
        cyberpi.audio.play_record()
        mbot2.forward(50, 1)
        mbot2.turn(-90)
        time.sleep(1)
